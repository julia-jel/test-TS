{
    "compilerOptions": {
        "target": "esnext",
        "allowJs": true,
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2018"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
}
